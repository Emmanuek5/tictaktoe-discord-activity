FROM oven/bun:latest

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY bun.lockb ./

# Install dependencies with Bun
RUN bun install

# Copy only necessary files for the socket server
COPY . . 
# Expose the port the socket server runs on
EXPOSE 4000

# Start the socket server directly with Bun
CMD ["bun", "run", "server/index.ts"]
